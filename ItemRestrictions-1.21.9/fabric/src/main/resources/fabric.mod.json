{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${version}",
  "name": "${mod_name}",
  "description": "${mod_description}",
  "authors": [
    "${mod_author}"
  ],
  "contact": {
    "homepage": "${mod_website}",
    "sources": "${mod_repository}"
  },
  "license": "${mod_license}",
  "icon": "icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "com.daqem.itemrestrictions.fabric.ItemRestrictionsFabric"
    ],
    "client": [
      "com.daqem.itemrestrictions.fabric.client.ItemRestrictionsFabricClient"
    ]
  },
  "mixins": [
    "itemrestrictions-common.mixins.json"
  ],
  "depends": {
    "fabric": "*",
    "minecraft": ">=${minecraft_version}",
    "architectury": ">=${architectury_version}",
    "yamlconfig": ">=${config_library_version}",
    "arc": ">=${arc_version}"
  }
}